<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounda"
    android:orientation="vertical"
    tools:context="com.ae4.doi_thuong.MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/thuacuocmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.06"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/viewbackground2">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/coins"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/txttienhienthi"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/viewbackground"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="60dp">

                    <Button
                        android:id="@+id/btnloa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:elevation="0dp" />

                    <ImageView
                        android:id="@+id/loa"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/shound"
                        app:srcCompat="@drawable/shound" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quanbau"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/bau" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtienbau"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendatbau"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtienbau"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quanca"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/ca" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="33dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtienca"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendatca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtienca"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quancua"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/cua" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="33dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtiencua"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendatcua"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtiencua"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quantom"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/tom" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtientom"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendattom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtientom"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quanga"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/ga" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtienga"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendatga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtienga"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/quanhuou"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:background="@drawable/backgrounditem"
                        android:src="@drawable/huou" />

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:background="@drawable/backgroundspiner"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/giamtienhuou"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/giamtienbutton" />

                        <TextView
                            android:id="@+id/tiendathuou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#8b1313"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/tangtienhuou"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/tangtienbutton" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/hoa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/xucsac1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/backgroundxucsac"
                    android:src="@drawable/bau" />

                <ImageView
                    android:id="@+id/xucsac2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/backgroundxucsac"
                    android:src="@drawable/bau" />

                <ImageView
                    android:id="@+id/xucsac3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/backgroundxucsac"
                    android:src="@drawable/bau" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center">



                <Button
                    android:id="@+id/btnxucsac"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/button"
                    android:text="XÃ³c"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/themtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/background_themtien"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imgdau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/cong" />

            <TextView
                android:id="@+id/animtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="38dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/coin_single_gold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thuacuoctxt"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/thua_cuoc"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/thuacuoc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Game Over"
                android:textColor="#000000"
                android:textSize="90dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/backbtn"
            android:layout_width="81dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backbuttonclick" />
    </FrameLayout>
</FrameLayout>
</LinearLayout>
